{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "docker-debug-prepare",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                "docker-compose.dev.yml",
                "up",
                "-d"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "isBackground": true,
            "problemMatcher": {
                "pattern": {
                    "regexp": "^.*Error.*$",
                    "file": 1,
                    "location": 2,
                    "message": 3
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": ".*Starting.*",
                    "endsPattern": ".*user-api.*"
                }
            }
        },
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "${workspaceFolder}/UserApiDemo.sln"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "docker-build-dev",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                "docker-compose.dev.yml",
                "exec",
                "-T",
                "api",
                "dotnet",
                "build",
                "/src/UserApiDemo.sln"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "docker-up-dev",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                "docker-compose.dev.yml",
                "up",
                "-d"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "docker-down-dev",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                "docker-compose.dev.yml",
                "down"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            }
        },
        {
            "label": "docker-logs-api",
            "type": "shell",
            "command": "docker-compose",
            "args": [
                "-f",
                "docker-compose.dev.yml",
                "logs",
                "-f",
                "api"
            ],
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "isBackground": true
        }
    ]
}
